<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background"
    android:padding="6dp"
    android:orientation="vertical"
    android:id="@+id/relativeLayout2">
    <info.efficacious.centralmodelschool.WeeklyCalender.WeekCalendar
        android:id="@+id/week_Calendar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:background="@color/colorPrimary"
        app:numOfPages="150"
        app:dayNameLength="threeLetters"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginBottom="2dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:paddingStart="@dimen/_8sdp"
                android:id="@+id/pidtv"
                android:gravity="center|start"
                android:layout_width="100dp"
                android:layout_weight="0.5"
                android:text="P.N"
                android:textColor="@color/black"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/PeriodTime"
                android:layout_width="100dp"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/black"
                android:text="Time"
                android:layout_toRightOf="@+id/pidtv"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/Teacher"
                android:layout_width="100dp"
                android:textColor="@color/black"
                android:text="Teacher"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_toRightOf="@+id/PeriodTime"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/Teacher_studenttimetable"
                android:gravity="center|center_vertical"
                android:layout_width="100dp"
                android:layout_weight="0.5"
                android:layout_toRightOf="@+id/Teacher"
                android:textColor="@color/black"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:id="@+id/rv_online_classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
