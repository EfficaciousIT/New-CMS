<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shadow_tile"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/book_relative"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="viewStart"
            android:text="book"
            android:textColor="@color/black"
            android:id="@+id/bookname_tv"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/image"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/downarrow"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/book_detail_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#B3B3B3"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        />
    <TextView
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:textAlignment="viewStart"
        android:text="Author"
        android:textColor="@color/green"
        android:id="@+id/author_tv"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#B3B3B3"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        />
    <TextView
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:textAlignment="viewStart"
        android:text="Edition"
        android:textColor="@color/black"
        android:id="@+id/edition_tv"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#B3B3B3"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <LinearLayout
            android:paddingBottom="@dimen/_3sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textAlignment="viewStart"
            android:text="Accession"
            android:textColor="@color/black"
            android:id="@+id/accession_tv"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textAlignment="viewStart"
                android:text="price"
                android:textColor="@color/black"
                android:id="@+id/price_tv"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>
</LinearLayout>